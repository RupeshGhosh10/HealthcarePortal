@model List<HealthcarePortal.Models.Employee>

@{
    ViewBag.Title = "Add Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<h2>Add Employee Details</h2>
<hr />
@using (Html.BeginForm("SelectPlan", "Proposal", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-hover table-striped employee-table">
        <thead>
            <tr>
                <th>No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Zip Code</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@(i + 1) @Html.HiddenFor(m => m[i].Id)</td>
                    <td>@Html.TextBoxFor(m => m[i].FirstName, new { @class = "form-control input-sm" })</td>
                    <td>@Html.TextBoxFor(m => m[i].LastName, new { @class = "form-control input-sm" })</td>
                    <td>@Html.TextBoxFor(m => m[i].DOB, new { @class = "form-control input-sm", @type = "date" })</td>
                    <td>@Html.TextBoxFor(m => m[i].ZipCode, new { @class = "form-control input-sm" })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}