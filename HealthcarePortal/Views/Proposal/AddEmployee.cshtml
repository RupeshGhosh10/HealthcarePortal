@model HealthcarePortal.Models.ViewModel.ProposalViewModel

@{
    ViewBag.Title = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

<h2>Add Employee</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Proposal.CompanyName)
    @Html.HiddenFor(model => model.Proposal.Address)
    @Html.HiddenFor(model => model.Proposal.ZipCode)
    @Html.HiddenFor(model => model.Proposal.ProposalEffectiveDate)
    @Html.HiddenFor(model => model.Proposal.NumberOfEmployee)
    @Html.HiddenFor(model => model.Proposal.AdminUserId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-hover table-striped employee-table">
        <thead>
            <tr>
                <th>No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Zip Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelItem in Model.Employees)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@Html.TextBoxFor(item => modelItem.FirstName, new { @class = "form-control input-sm" })</td>
                    <td>@Html.TextBoxFor(item => modelItem.LastName, new { @class = "form-control input-sm" })</td>
                    <td>@Html.TextBoxFor(item => modelItem.DOB, new { @class = "form-control input-sm", @type = "date" })</td>
                    <td>@Html.TextBoxFor(item => modelItem.ZipCode, new { @class = "form-control input-sm" })</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}